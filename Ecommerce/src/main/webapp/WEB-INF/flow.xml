<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">
 
	<!-- Executed when webFlow is triggered -->
	<on-start>
	<!-- demohandler is java class available through annotated Demohandler.java class.here we are calling itâ€™s initFlow() method. -->
	  <evaluate expression="userController.initFlow()" result="flowScope.product"/>
	</on-start>
 
	 <!-- if not specified the first view state is the starting state -->
	<!-- <view-state id="start" view="productdetails" model="flowScope.product">
	   <transition on="submit" to="orderid"/>
	</view-state> -->
 
	
	<!-- <action-state id="validate">
		<evaluate expression="demohandler.validateDetails(userBean,messageContext)"></evaluate>
		<transition on="success" to="confirmDetails" />
		<transition on="failure" to="start" />
	</action-state>
  -->
	<view-state id="start" view="order" model="flowScope.product">
		<transition on="submit" to="shippingid" />
	</view-state>
	<view-state id="shippingid" view="shipping" model="flowScope.product">
		
		<transition on="submit" to="ordersummaryid" />
	</view-state>
	<view-state id="ordersummaryid" view="ordersummary" model="flowScope.product">
	
		<transition on="submit" to="thankyouid" />
	</view-state>
	<view-state id="thankyouid" view="thank" model="flowScope.product">
	
		<transition on="submit" to="toHome" />
	</view-state>
 
	<end-state id="toHome" view="externalRedirect:index" />
	
	<!--  <end-state id="toException" view="externalRedirect:contextRelative:exception.jsp" />-->
 
	<!-- these events are available in every state-->
	<global-transitions>
		<transition on="home" to="toHome" />
	<!--  	<transition on="error" to="toException" />-->
	</global-transitions>
</flow>
